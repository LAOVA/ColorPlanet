/**index.wxss**/

.img-placeholder {
    margin-top: 40rpx;
    background-color: #1295dba4;
    border-radius: 6px;
    width: 480rpx;
    height: 480rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,.25);
  }
  
  .icon-add {
    width: 200rpx;
    height: 200rpx;
  }
  
  .colors-container {
    max-width: 80%;
    height: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 40rpx;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,.25);
    border-radius: 12rpx;
    overflow: hidden;
  }
  
  .colors-container .color {
    flex: 1;
    max-width: 80rpx;
    height: 100%;
  }
  #image-handler {
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,.25);
    border-radius: 12rpx;
    margin-top: 40rpx;
  }
  .button-container {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 80%;
    margin-top: 40rpx;
  }
  .primary-button {
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,.25);
    border-radius: 12rpx;
    padding: 10rpx 20px;
    background-color: #1295dba4;
    color: white;
  }


  /* 暂时不知道上面还有什么用，先不删了 */
  /* 重新选取的按钮样式重写 */
  .regain{
      /* 调整大小位置形状背景颜色阴影 */
      position: relative;
      top: 10rpx;
    margin-bottom: 40rpx;
        width: 300rpx;
        height: 80rpx;
        /* height: 46px; */
        /* width: 100px; */
        border-radius: 50px;
        background: #e0e0e0;
        box-shadow: 16rpx 16rpx 32rpx #bebebe,
        -16rpx -16rpx 32rpx #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 40rpx;
        /* 点击的渐变效果 */
        transition: box-shadow .1s ease-in-out;  
  }
  /* 点击效果 */
  .regain:active,
  .button:active{
    box-shadow: 0 0 0 rgba(0, 0, 0, 0.1), 0 0 0 rgba(255, 255, 255, 1),  
    inset 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.1), -10rpx -10rpx 10rpx rgba(255, 255, 255, 1);  
  }
/* 写按钮的盒子 */
  .box{
    width: 90%;
    background-color: #fff;
   margin: 60rpx auto 80rpx;
    border-radius: 40rpx;
    background: #e0e0e0;
    box-shadow: 16rpx 16rpx 32rpx #bebebe,
        -16rpx -16rpx 32rpx #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  /* 给+图片写个盒子 */
  .box1{
    width: 100%;
    background-color: #fff;
   margin: 80rpx auto 0;
    border-radius: 40rpx;
    background: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  /* 按钮样式 */
  .button{
    height: 92rpx;
    width: 100px;
    border-radius: 100rpx;
    background: #e0e0e0;
    box-shadow: 16rpx 16rpx 32rpx #bebebe,
        -16rpx -16rpx 32rpx #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
    transition: box-shadow .1s ease-in-out;  
    margin-bottom: 50rpx;
  }
/* pages/edit/edit.wxss */
.colors-container {
    max-width: 80%;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 40rpx;
    box-shadow: 0 4px 12px rgba(0, 0, 0, .25);
    border-radius: 6px;
    overflow: hidden;
}

.colors-container .color {
    flex: 1;
    max-width: 40px;
    height: 100%;
    position: relative;
}

.color.selected {
    box-shadow: 0px 0px 20px rgb(58, 58, 58);
    z-index: 1000;
}

.selected-container {
    background: #e0e0e0;
    box-shadow: 8px 8px 16px #bebebe,
        -8px -8px 16px #ffffff;
    border-radius: 6px;
    width: 80%;
    height: 80px;
    margin-top: 50px;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.square-color {
    height: 60px;
    width: 60px;
    box-shadow: 0 4px 12px rgba(0, 0, 0, .25);
    border-radius: 6px;
}

.slider-container {
    background: #e0e0e0;
    box-shadow: 8px 8px 16px #bebebe,
        -8px -8px 16px #ffffff;
    border-radius: 6px;
    width: 80%;
    height: 80px;
    margin-top: -16px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-direction: column;
    padding: 10px 0;
}

.red .van-slider__bar {
    background-color: red;
}

.green .van-slider__bar {
    background-color: green;
}

.blue .van-slider__bar {
    background-color: blue;
}


.back {
    position: relative;
    top: 50px;
    width: 90%;
    height: 40vh;
    border-radius: 20px;
    background: #e0e0e0;
    box-shadow: 8px 8px 16px #bebebe,
        -8px -8px 16px #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.button {
    height: 46px;
    width: 100px;
    border-radius: 50px;
    background: #e0e0e0;
    box-shadow: 8px 8px 16px #bebebe,
        -8px -8px 16px #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
    transition: box-shadow .1s ease-in-out;  
 
}  
.button:active{  
    box-shadow: 0 0 0 rgba(0, 0, 0, 0.1), 0 0 0 rgba(255, 255, 255, 1),  
    inset 5px 5px 30rpx rgba(0, 0, 0, 0.1), -18rpx -18rpx 30rpx rgba(255, 255, 255, 1);  
}

.text {
    margin-top: 20px;
    width: 80%;
    height: 40px;
    border-radius: 10px;
    background: #e0e0e0;
    box-shadow: inset 8px 8px 16px #bebebe,
    inset -8px -8px 16px #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
}